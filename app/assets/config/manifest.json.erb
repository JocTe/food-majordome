{
 "background_color": "white",
 "description": "Food Majordome is a service elaborated with care to help you to organise your weekly meal plan. Just tell us your preferences, we suggest you menus and compile your shopping list for you!",
 "display": "fullscreen",
 "name": "Food Majordome",
 "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/icons/")).select {|f| !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path "icons/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}