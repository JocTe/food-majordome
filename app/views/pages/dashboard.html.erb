<%= render "shared/header", text:'Hello Favot' %>

<div class="container">
  <div class="dashboard">
      <div class="container" id="icons">
        <div class="row">
            <div class="col">
              <a href="#" >
                <div class="border-thin2 card-icon2 text-center py-2 mb-3 ">
                  <%= image_tag("dashboard_icons/calendar.svg", :alt => "calendar") %>
                  <p class="mb-0">My weekly menu</p>
                </div>
              </a>
            </div>

          <div class="col">
            <a href="#" >
              <div class="border-thin2 card-icon2 text-center py-2 mb-3 " >
                <%= image_tag("dashboard_icons/chef.svg", :alt => "cooking") %>
                <p class="mb-0">Cooking instructions</p>
              </div>
            </a>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <a href="#" >
              <div class="border-thin2 card-icon2 text-center py-2 mb-3 " >
                <%= image_tag("dashboard_icons/shopping.svg", :alt => "shopping") %>
                <p class="mb-0">My shopping list</p>
              </div>
