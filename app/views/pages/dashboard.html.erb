                <%= image_tag("dashboard_icons/gift.svg", :alt => "surprise") %>
                <p class="mb-0">Chef's surprise</p>
              </div>
            </a>
          </div>
          <div class="col">
            <a href="#" >
              <div class="border-thin2 card-icon2 text-center py-2 mb-3 " >
                <%= image_tag("dashboard_icons/settings.svg", :alt => "settings") %>
                <p class="mb-0">Settings</p>
              </div>
            </a>
          </div>
        </div>
    </div>
</div>
