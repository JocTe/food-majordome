<div class="container">
  <h1>Tell us more about you:</h1>  
  
  <h3>How many are you at home?</h3>
  <!-- <input type="number" id="number_people"> -->  
  <select class="number_people" name="ice-cream">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
    <option value="6">6</option>
    <option value="7">7</option>
    <option value="8">8</option>
    <option value="9">9</option>
  </select>

  <h3>Your diet:</h3>
  <div class="container">
  <div class="row">
    <div class="col">
      <div class="border-thin card-icon text-center py-2 mb-3 diet" data-diet="vegan" data-state="false">
        <%= image_tag("diet_icons/vegan.svg", :alt => "vegan") %>
        <p class="mb-0">Vegan</p>
      </div>
    </div>
    <div class="col">
      <div class="border-thin card-icon text-center py-2 mb-3 diet" data-diet="vegetarian" data-state="false">
        <%= image_tag("diet_icons/vegetarian.svg", :alt => "vegetarian") %>
        <p class="mb-0">Vegetarian</p>
      </div>      
    </div>    
  </div>
  <div class="row">
    <div class="col">
      <div class="border-thin card-icon text-center py-2 mb-3 diet" data-diet="gluten_free" data-state="false">
        <%= image_tag("diet_icons/gluten-free.svg", :alt => "gluten-free") %>
        <p class="mb-0">Gluten-free</p>
      </div>      
    </div>
    <div class="col">
      <div class="border-thin card-icon text-center py-2 mb-3 diet" data-diet="dairy_free" data-state="false">
        <%= image_tag("diet_icons/dairy-free.svg", :alt => "dairy-free") %>
        <p class="mb-0">Dairy-free</p>
      </div> 
    </div>    
  </div>
  <div class="row">
    <div class="col">
      <div class="border-thin card-icon text-center py-2 mb-3 diet" data-diet="pescetarian" data-state="false">
        <%= image_tag("diet_icons/pescetarian.svg", :alt => "pescetarian") %>
        <p class="mb-0">Pescetarian</p>
      </div>      
    </div>
    <div class="col">
      <div class="border-thin card-icon text-center py-2 mb-3 diet" data-diet="no_diet" data-state="false">
        <%= image_tag("diet_icons/no-diet.svg", :alt => "pescetarian") %>
        <p class="mb-0">No particular diet</p>
      </div>      
    </div>    
  </div>
  
