<%= render "shared/header", text: "Your week menu" %>

<div class="container" data-controller="suggestion" data-suggestion-index="0">

  <div class="hide show" data-suggestion-target="screen">
    <div class="wrapper-margin-bottom-small">
      <div class="menu-cards-list mt-4">
        <% @suggestions.each_with_index do |suggestion, index| %>
          <% date = Date.today + index %>
            <h3 id="recipe-for-date" ><%= date.strftime("%A %d, %B")%></h3>
          <%= render  "shared/menu_cards", recipe: suggestion, date: date %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="swipe-box">
    <div class="test-swipe"><p>recette 3</p></div>
    <div class="test-swipe"><p>recette 2</p></div>
    <div class="test-swipe"><p>recette 1</p></div>
  </div>

  <div class="loading-screen hide" data-suggestion-target="screen">
      <h3 class="loading-screen-typed" id="loading-title"></h3>
      <div class="spinner-grow text-warning" role="status">
        <span class="sr-only">Loading...</span>
      </div>
  </div>



</div>
